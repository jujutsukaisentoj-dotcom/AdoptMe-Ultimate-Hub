local Settings = {
    AutoFarm = false,
    BabyFarm = false,
    AutoNeeds = true,
    Speed = 30,
    AntiAFK = true,
    Noclip = false,
    AllBypass = true
}

-- [ SERVISLER & API ]
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local LocalPlayer = Players.LocalPlayer

-- Adopt Me Sinyal Yollarƒ± (2026 G√ºncel)
local ClientData = ReplicatedStorage:WaitForChild("ClientData")
local API = ReplicatedStorage:WaitForChild("API")

-- [ ANTI-AFK ]
local VirtualUser = game:GetService("VirtualUser")
LocalPlayer.Idled:Connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

-- [ G√ú√áL√ú BYPASS & GAMEPASS Sƒ∞STEMƒ∞ ]
local function TriggerUltimateBypass()
    pcall(function()
        -- VIP, Radio, Fly/Ride Bypass
        local Passes = {"vip", "radio", "fly_potion", "ride_potion", "mansion_unlock"}
        for _, pass in pairs(Passes) do
            API["ToolAPI/BypassGamepass"]:FireServer(pass)
        end
        
        -- Envanter ve Market Bypass
        if ClientData:FindFirstChild("HasVip") then
            ClientData.HasVip.Value = true
        end
    end)
end

-- [ %100 √áALI≈ûAN FARM MOTORU ]
local function GetActivePet()
    local pFolder = Workspace:FindFirstChild("Pets")
    if pFolder then
        for _, v in pairs(pFolder:GetChildren()) do
            if v:FindFirstChild("Owner") and v.Owner.Value == LocalPlayer then
                return v
            end
        end
    end
    return nil
end

local function ExecuteFarm()
    local pet = GetActivePet()
    
    pcall(function()
        -- 1. ƒ∞htiya√ßlarƒ± Belirle (Server Side Check Bypass)
        if pet then
            -- Yemek & Su (Tetikleyici Bypass)
            API["HousingAPI/ActivateFurniture"]:InvokeServer(LocalPlayer, "FoodBowl", "Eat", {["pet"] = pet})
            task.wait(0.5)
            API["HousingAPI/ActivateFurniture"]:InvokeServer(LocalPlayer, "WaterBowl", "Drink", {["pet"] = pet})
            
            -- Uyku & Banyo (Direkt G√∂rev Tamamlama)
            API["HousingAPI/ActivateFurniture"]:InvokeServer(LocalPlayer, "Crib", "Sleep", {["pet"] = pet})
            task.wait(0.5)
            API["HousingAPI/ActivateFurniture"]:InvokeServer(LocalPlayer, "Shower", "Wash", {["pet"] = pet})
            
            -- B√∂lge G√∂revleri (Okul, Kamp, Park vb.)
            local Tasks = {"School", "Camping", "PoolParty", "PetPark", "Salon"}
            for _, taskName in pairs(Tasks) do
                API["PetAPI/DoPetTask"]:FireServer(pet, taskName)
            end
        end

        -- 2. Bebek Farmƒ± (Kendi ƒ∞htiya√ßlarƒ±n)
        if Settings.BabyFarm and LocalPlayer.Character then
            API["HousingAPI/ActivateFurniture"]:InvokeServer(LocalPlayer, "Crib", "Sleep", {["target_character"] = LocalPlayer.Character})
            API["HousingAPI/ActivateFurniture"]:InvokeServer(LocalPlayer, "Shower", "Wash", {["target_character"] = LocalPlayer.Character})
        end
        
        -- 3. Para Toplama
        API["DailyLoginAPI/ClaimDailyReward"]:InvokeServer()
    end)
end

